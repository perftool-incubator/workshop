{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/perftool-incubator/workshop/master/schema.json",

    "oneOf": [
	{
	    "type": "object",
	    "properties": {
		"workshop": {
		    "$ref": "#/definitions/workshop"
		},
		"userenv": {
		    "$ref": "#/definitions/userenv"
		},
		"requirements": {
		    "$ref": "#/definitions/requirements"
		}
	    },
	    "required": [
		"workshop",
		"userenv",
		"requirements"
	    ],
	    "additionalProperties": false
	},
	{
	    "type": "object",
	    "properties": {
		"workshop": {
		    "$ref": "#/definitions/workshop"
		},
		"userenvs": {
		    "$ref": "#/definitions/userenvs"
		},
		"requirements": {
		    "$ref": "#/definitions/requirements"
		}
	    },
	    "required": [
		"workshop",
		"userenvs",
		"requirements"
	    ],
	    "additionalProperties": false
	},
	{
	    "type": "object",
	    "properties": {
		"workshop": {
		    "$ref": "#/definitions/workshop"
		},
		"config": {
		    "$ref": "#/definitions/config"
		}
	    },
	    "required": [
		"workshop",
		"config"
	    ],
	    "additionalProperties": false
	}
    ],
    "definitions": {
	"workshop": {
	    "type": "object",
	    "properties": {
		"schema": {
		    "type": "object",
		    "properties": {
			"version": {
			    "type": "string",
			    "enum": [
				"2020.03.02",
				"2020.04.30",
				"2022.07.25"
			    ]
			}
		    },
		    "required": [
			"version"
		    ],
		    "additionalProperties": false
		}
	    },
	    "required": [
		"schema"
	    ],
	    "additionalProperties": false
	},
	"userenv": {
	    "type": "object",
	    "properties": {
		"name": {
		    "type": "string",
		    "minLength": 1
		},
		"label": {
		    "type": "string",
		    "minLength": 1
		},
		"origin": {
		    "type": "object",
		    "properties": {
			"image": {
			    "type": "string",
			    "minLength": 1
			},
			"tag": {
			    "type": "string",
			    "minLength": 1
			}
		    },
		    "required": [
			"image",
			"tag"
		    ],
		    "additionalProperties": false
		},
		"properties": {
		    "type": "object",
		    "properties": {
			"packages": {
			    "type": "object",
			    "properties": {
				"type": {
				    "type": "string",
				    "minLength": 1
				},
				"manager": {
				    "type": "string",
				    "minLength": 1
				}
			    },
			    "required": [
				"type",
				"manager"
			    ],
			    "additionalProperties": false
			}
		    },
		    "required": [
			"packages"
		    ],
		    "additionalProperties": false
		}
	    },
	    "required": [
		"name",
		"label",
		"origin",
		"properties"
	    ],
	    "additionalProperties": false
	},
	"userenvs": {
	    "type": "array",
	    "minItems": 1,
	    "uniqueItems": true,
	    "items": {
		"type": "object",
		"properties": {
		    "name": {
			"type": "string",
			"minLength": 1
		    },
		    "requirements": {
			"type": "array",
			"items": {
			    "type": "string",
			    "minLength": 1
			}
		    }
		},
		"required": [
		    "name",
		    "requirements"
		],
		"additionalProperties": false
	    }
	},
	"requirements": {
	    "type": "array",
	    "uniqueItems": true,
	    "items": {
		"oneOf": [
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "distro-manual"
				]
			    },
			    "distro-manual_info": {
				"type": "object",
				"properties": {
				    "packages": {
					"type": "array",
					"minItems": 1,
					"uniqueuItems": true,
					"items": {
					    "type": "string",
					    "minLength": 1
					}
				    }
				},
				"required": [
				    "packages"
				],
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "distro-manual_info"
			],
			"additionalProperties": false
		    },
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "distro"
				]
			    },
			    "distro_info": {
				"type": "object",
				"minProperties": 1,
				"properties": {
				    "operation": {
					"type": "string",
					"default": "install",
					"enum": [
					    "install",
					    "remove"
					]
				    },
				    "packages": {
					"type": "array",
					"minItems": 1,
					"uniqueuItems": true,
					"items": {
					    "type": "string",
					    "minLength": 1
					}
				    },
				    "groups": {
					"type": "array",
					"minItems": 1,
					"uniqueuItems": true,
					"items": {
					    "type": "string",
					    "minLength": 1
					}
				    }
				},
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "distro_info"
			],
			"additionalProperties": false
		    },
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "manual"
				]
			    },
			    "manual_info": {
				"type": "object",
				"properties": {
				    "commands": {
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
					    "type": "string",
					    "minLength": 1
					}
				    }
				},
				"required": [
				    "commands"
				],
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "manual_info"
			],
			"additionalProperties": false
		    },
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "python3"
                                ]
                            },
                            "python3_info": {
                                "type": "object",
                                "properties": {
                                    "packages": {
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": true,
                                        "items": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    }
                                },
                                "required": [
                                    "packages"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "name",
                            "type",
                            "python3_info"
                        ],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "node"
                                ]
                            },
                            "node_info": {
                                "type": "object",
                                "properties": {
                                    "packages": {
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": true,
                                        "items": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    }
                                },
                                "required": [
                                    "packages"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "name",
                            "type",
                            "node_info"
                        ],
                        "additionalProperties": false
                    },
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "cpan"
				]
			    },
			    "cpan_info": {
				"type": "object",
				"properties": {
				    "packages": {
					"type": "array",
					"minItems": 1,
					"uniqueItems": true,
					"items": {
					    "type": "string",
					    "minLength": 1
					}
				    }
				},
				"required": [
				    "packages"
				],
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "cpan_info"
			],
			"additionalProperties": false
		    },
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "source"
				]
			    },
			    "source_info": {
				"type": "object",
				"properties": {
				    "url": {
					"type": "string",
					"minLength": 1
				    },
				    "filename": {
					"type": "string",
					"minLength": 1
				    },
				    "commands": {
					"type": "object",
					"properties": {
					    "unpack": {
						"type": "string",
						"minLength": 1
					    },
					    "get_dir": {
						"type": "string",
						"minLength": 1
					    },
					    "commands": {
						"type": "array",
						"minItems": 1,
						"uniqueItems": true,
						"items": {
						    "type": "string",
						    "minLength": 1
						}
					    }
					},
					"required": [
					    "unpack",
					    "get_dir",
					    "commands"
					],
					"additionalProperties": false
				    }
				},
				"required": [
				    "url",
				    "filename",
				    "commands"
				],
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "source_info"
			],
			"additionalProperties": false
		    },
		    {
			"type": "object",
			"properties": {
			    "name": {
				"type": "string",
				"minLength": 1
			    },
			    "type": {
				"type": "string",
				"enum": [
				    "files"
				]
			    },
			    "files_info": {
				"type": "object",
				"properties": {
				    "files": {
					"type": "array",
					"items": {
					    "type": "object",
					    "properties": {
						"src": {
						    "type": "string",
						    "minLength": 1
						},
						"dst": {
						    "type": "string",
						    "minLength": 1
						}
					    },
					    "required": [
						"src",
						"dst"
					    ],
					    "additionalProperties": false
					}
				    }
				},
				"required": [
				    "files"
				],
				"additionalProperties": false
			    }
			},
			"required": [
			    "name",
			    "type",
			    "files_info"
			],
			"additionalProperties": false
		    }
		]
	    }
	},
	"config": {
	    "type": "object",
	    "properties": {
		"cmd": {
		    "type": "string",
		    "minLength": 1
		},
		"entrypoint": {
		    "type": "array",
		    "minItems": 1,
		    "items": {
			"type": "string",
			"minLength": 1
		    }
		},
		"annotations": {
		    "type": "array",
		    "uniqueItems": true,
		    "minItems": 1,
		    "items": {
			"type": "string",
			"minLength": 3,
			"pattern": ".+=.+"
		    }
		},
		"author": {
		    "type": "string",
		    "minLength": 1
		},
		"envs": {
		    "type": "array",
		    "uniqueItems": true,
		    "minItems": 1,
		    "items": {
			"type": "string",
			"minLength": 3,
			"pattern": ".+=.+"
		    }
		},
		"ports": {
		    "type": "array",
		    "uniqueItems": true,
		    "minItems": 1,
		    "items": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65536
		    }
		},
		"labels": {
		    "type": "array",
		    "minItems": 1,
		    "items": {
			"type": "string",
			"minLength": 1
		    }
		}
	    },
	    "additionalProperties": false
	}
    }
}
